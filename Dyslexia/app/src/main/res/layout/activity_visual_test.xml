<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nitishchandra.dyslexia.visualTest"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/ques"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identify the color"
        android:textColor="#000000"
        android:textSize="34sp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="textview"
        android:textSize="34sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="220dp"
        android:text="option1"
        android:textSize="30sp"
        android:onClick="onVisualSubmit"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="4dp"
        android:textColor="#FFFFFF"
        android:background="#033D7B"/>

    <Button
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/option1"
        android:layout_below="@+id/option1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="52dp"
        android:background="#033D7B"
        android:onClick="onVisualSubmit"
        android:text="option2"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/option2"
        android:layout_marginBottom="153dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="168dp"
        android:background="#033D7B"
        android:onClick="onVisualSubmit"
        android:text="option3"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
</RelativeLayout>
